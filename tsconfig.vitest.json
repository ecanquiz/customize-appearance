{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "types": ["vitest/globals", "node"],
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "src/**/__tests__/**/*.ts"
  ],
  "exclude": [
    "**/__mocks__/**",
    "dist",
    "node_modules"
  ]
}